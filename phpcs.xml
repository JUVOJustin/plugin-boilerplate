<?xml version="1.0"?>
<ruleset>

    <!-- Strip the filepaths down to the relevant bit. -->
    <arg name="basepath" value="."/>

    <!-- Show progress, show the error codes for each message (source). -->
    <arg value="ps" />

    <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="8" />

    <!-- Specify the standard to use -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>
    </rule>

    <!-- Directories to ignore -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>bin/*</exclude-pattern>
    <exclude-pattern>dist/*</exclude-pattern>

    <!-- Include all files from the root of the project -->
    <file>.</file>

    <!-- PHPCS Reports errors on empty files even when they do have an empty line at the end -->
    <rule ref="Squiz.Commenting.FileComment.SpacingAfterComment">
        <exclude-pattern>*.js</exclude-pattern>
        <exclude-pattern>*.ts</exclude-pattern>
        <exclude-pattern>*.tsx</exclude-pattern>
    </rule>

    <!-- Disable rules for specific files -->
    <rule ref="WordPress.WP.AlternativeFunctions">
        <exclude-pattern>src/Cli/*.php</exclude-pattern>
        <exclude-pattern>*.ts</exclude-pattern>
        <exclude-pattern>*.tsx</exclude-pattern>
    </rule>


    <!-- You can also specify the severity of the errors/warnings to be displayed -->
    <config name="severity" value="8"/>

</ruleset>